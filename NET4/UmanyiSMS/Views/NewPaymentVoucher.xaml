<UserControl x:Class="UmanyiSMS.Views.NewPaymentVoucher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="984"
             Background="White">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="20,20,0,0" Style="{DynamicResource Title}"  Text="New Payment Voucher" 
                   VerticalAlignment="Top"/>

        <TextBlock HorizontalAlignment="Left" Margin="30,85,0,0" Text="Payee" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="100,80,0,0" VerticalAlignment="Top" Width="300"
                 Text="{Binding CurrentVoucher.NameOfPayee, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock HorizontalAlignment="Left" Margin="30,135,0,0" Text="Address" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="100,130,0,0" VerticalAlignment="Top" Width="300"
                 Text="{Binding CurrentVoucher.Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>


        <TextBlock HorizontalAlignment="Left" Margin="30,185,0,0" Text="Category" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left"  Margin="100,180,0,0" VerticalAlignment="Top" Width="300" 
                  ItemsSource="{Binding AllCategories}"
                 SelectedItem="{Binding CurrentVoucher.Category, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock HorizontalAlignment="Left" Margin="30,235,0,0" Text="Description" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="75" Margin="100,230,0,0" VerticalAlignment="Top" Width="300"
                 Text="{Binding CurrentVoucher.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxLength="199" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
       
        <TextBlock HorizontalAlignment="Left" Margin="40,330,0,0" Text="Date" VerticalAlignment="Top"/>
        <DatePicker HorizontalAlignment="Left" Height="23" Margin="100,325,0,0" VerticalAlignment="Top" Width="300" SelectedDateFormat="Long"
                 SelectedDate="{Binding CurrentVoucher.DatePaid,  Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock HorizontalAlignment="Left" Margin="30,390,0,0" Text="Add Entry" VerticalAlignment="Top" Style="{DynamicResource Title0}"/>

        <TextBlock HorizontalAlignment="Left" Margin="40,440,0,0" Text="Decsription" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" MaxLength="30" Height="23" Margin="105,440,0,0" VerticalAlignment="Top" Width="295"
                 DataContext="{Binding NewEntry}"
                 Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        

        <TextBlock HorizontalAlignment="Left" Margin="40,490,0,0" Text="Amount" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="105,490,0,0" VerticalAlignment="Top" Width="180"
                 DataContext="{Binding NewEntry}"
                 Text="{Binding Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="310,540,0,0" VerticalAlignment="Top" Width="86"
                Command="{Binding AddEntryCommand}"/>

        <TextBlock HorizontalAlignment="Left" Margin="430,70,0,0" Text="Entries" VerticalAlignment="Top" Style="{DynamicResource Title0}"/>
        <ListBox Margin="430,110,10,50" ItemsSource="{Binding CurrentVoucher.Entries}" ItemTemplate="{DynamicResource PaymentVoucherEntryModel}"/>
        <Button Content="Save" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="100"
                Command="{Binding SaveCommand}"/>
        <Button Content="Save &amp; Print" HorizontalAlignment="Right" Margin="0,0,120,10" VerticalAlignment="Bottom" Width="150"
                Command="{Binding SaveAndPrintCommand}"/>
    </Grid>
</UserControl>
