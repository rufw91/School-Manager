<UserControl x:Class="Starehe.Views.NewFeesPayment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" Background="White">
    <Grid>
        <TextBlock Margin="20,20,0,0" Text="New Fees Payment" VerticalAlignment="Top" HorizontalAlignment="Left"
                 Style="{DynamicResource Title}"/>
        <Grid>
            <TextBlock HorizontalAlignment="Left" Margin="20,60,0,0" Style="{DynamicResource Title0}" Text="Student" VerticalAlignment="Top"/>

            <TextBlock HorizontalAlignment="Left" Margin="30,100,0,0" Text="Student ID" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="92,100,0,0" VerticalAlignment="Top" Width="200"
                 Text="{Binding CurrentPayment.StudentID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Delay=20,
            ValidatesOnNotifyDataErrors=True}"/>
            <TextBlock HorizontalAlignment="Left" Margin="30,145,0,0" Text="Name" VerticalAlignment="Top"/>

            <TextBox HorizontalAlignment="Left" Margin="92,145,0,0" VerticalAlignment="Top" Width="200"
                 Text="{Binding CurrentPayment.NameOfStudent, Mode=OneWay}" IsEnabled="False" Background="WhiteSmoke" IsReadOnlyCaretVisible="True"/>

            <TextBlock HorizontalAlignment="Left" Margin="20,185,0,0" Style="{DynamicResource Title0}" Text="Payment" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="30,230,0,0" TextWrapping="Wrap" Text="Payment" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="92,230,0,0" VerticalAlignment="Top" Width="150"                 
                 Text="{Binding CurrentPayment.AmountPaid, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

            <TextBlock HorizontalAlignment="Left" Margin="20,280,0,0" Text="Fees Structure (Current Term)" VerticalAlignment="Top"
                   Style="{DynamicResource SmallTitle}"/>
            <ListBox Name="lbxFeesStructure" HorizontalAlignment="Left" Margin="30,310,0,50" Width="270" ItemsSource="{Binding CurrentFeesStructure.Entries}"
                     ItemTemplate="{StaticResource FeesStructureEditableEntryModel}"/>
            <TextBlock HorizontalAlignment="Left" Margin="304,310,0,0" VerticalAlignment="Top">
                <Hyperlink Command="{Binding RemoveItemCommand}" CommandParameter="{Binding Path=SelectedIndex, ElementName=lbxFeesStructure}">Remove</Hyperlink>
            </TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="350,70,0,0" Style="{DynamicResource Title0}" Text="Recent Payments" VerticalAlignment="Top"/>
            <ListBox Margin="350,109,30,50" ItemsSource="{Binding RecentPayments}" ItemTemplate="{StaticResource FeePaymentModel}" />

            <Button Content="_Save" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75"
                Command="{Binding SaveCommand}"/>
            <Button Content="Save &amp; Print" HorizontalAlignment="Right" Margin="0,0,95,10" VerticalAlignment="Bottom" Width="120"
                   Command="{Binding SaveAndPrintCommand}"/>
            <TextBlock HorizontalAlignment="Left" Margin="30,0,0,20" Text="TOTAL:" VerticalAlignment="Bottom" FontWeight="SemiBold" FontSize="16"/>
            <TextBlock HorizontalAlignment="Left" Margin="85,0,0,20" Text="{Binding FeesStructureTotal, StringFormat={}{0:N2}}" VerticalAlignment="Bottom" FontWeight="SemiBold" FontSize="16"/>
            <TextBlock HorizontalAlignment="Right" Margin="0,51,30,0" VerticalAlignment="Top">
                <Hyperlink Command="{Binding PreviewCommand}">Preview Receipt</Hyperlink>
            </TextBlock>


        </Grid>
    </Grid>
</UserControl>
