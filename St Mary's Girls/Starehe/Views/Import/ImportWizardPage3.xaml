<UserControl x:Class="Starehe.Views.ImportWizardPage3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views ="clr-namespace:Starehe.Views"
            mc:Ignorable="d" Background="{DynamicResource WindowBackground}"
             d:DesignHeight="500" d:DesignWidth="600">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" Text="Column Mapping" Style="{DynamicResource Title}" VerticalAlignment="Top"/>
        <StackPanel Margin="30,50,0,0" Width="400" HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Height="40">
                <TextBlock VerticalAlignment="Center" Text="Student ID" Style="{DynamicResource Emphasis1}" Width="150"/>
                <ComboBox Width="250" VerticalAlignment="Center" 
                          ItemsSource="{Binding Path=DataContext.AllColumns, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"
                          SelectedItem="{Binding Path=DataContext.StudentIDColumn, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40">
                <TextBlock VerticalAlignment="Center" Text="First Name" Style="{DynamicResource Emphasis1}" Width="150"/>
                <ComboBox Width="250" VerticalAlignment="Center"
                          ItemsSource="{Binding Path=DataContext.AllColumns, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"
                          SelectedItem="{Binding Path=DataContext.FirstNameColumn, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40">
                <TextBlock VerticalAlignment="Center" Text="Middle Name" Style="{DynamicResource Emphasis1}" Width="150"/>
                <ComboBox Width="250" VerticalAlignment="Center"
                          ItemsSource="{Binding Path=DataContext.AllColumns, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"
                          SelectedItem="{Binding Path=DataContext.MiddleNameColumn, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40">
                <TextBlock VerticalAlignment="Center" Text="Last Name" Style="{DynamicResource Emphasis1}" Width="150"/>
                <ComboBox Width="250" VerticalAlignment="Center"
                          ItemsSource="{Binding Path=DataContext.AllColumns, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"
                          SelectedItem="{Binding Path=DataContext.LastNameColumn, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40">
                <TextBlock VerticalAlignment="Center" Text="Class" Style="{DynamicResource Emphasis1}" Width="150"/>
                <ComboBox Width="250" VerticalAlignment="Center"
                          ItemsSource="{Binding Path=DataContext.AllColumns, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"
                          SelectedItem="{Binding Path=DataContext.ClassColumn, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40">
                <TextBlock VerticalAlignment="Center" Text="Phone No." Style="{DynamicResource Emphasis1}" Width="150"/>
                <ComboBox Width="250" VerticalAlignment="Center"
                          ItemsSource="{Binding Path=DataContext.AllColumns, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"
                          SelectedItem="{Binding Path=DataContext.PhoneNoColumn, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40">
                <TextBlock VerticalAlignment="Center" Text="Balance B/F" Style="{DynamicResource Emphasis1}" Width="150"/>
                <ComboBox Width="250" VerticalAlignment="Center"
                          ItemsSource="{Binding Path=DataContext.AllColumns, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"
                          SelectedItem="{Binding Path=DataContext.BalanceBFColumn, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"/>
            </StackPanel>
        </StackPanel>
        <TextBlock HorizontalAlignment="Left" Margin="450,13,0,0" Text="Accepted Values" VerticalAlignment="Top"
                   Style="{DynamicResource ContentTextSemiBold}"/>
        <TextBlock HorizontalAlignment="Left" Margin="450,60,0,0" Text="Numeric" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="450,100,0,0" Text="Text" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="450,140,0,0" Text="Text" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="450,180,0,0" Text="Numeric" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="450,220,0,0" Text="Numeric" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="450,260,0,0" Text="Numeric" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="450,300,0,0" Text="Numeric" VerticalAlignment="Top"/>
        <StackPanel Grid.Row="1" Margin="0,0,0,15" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button Content="Cancel" Width="100" IsCancel="True"
                    Command="{Binding Path=DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"/>
            <Grid Width="10"/>
            <Button Content="Next" Width="100" IsDefault="True"
                    Command="{Binding Path=DataContext.NextCommand, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"/>
                   
        </StackPanel>
        <ProgressBar HorizontalAlignment="Left" Height="3" Margin="450,80,0,0" VerticalAlignment="Top" Width="120"
                     Value="{Binding Path=DataContext.TestProgressStudentID, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"/>
        <ProgressBar HorizontalAlignment="Left" Height="3" Margin="450,120,0,0" VerticalAlignment="Top" Width="120"
                     Value="{Binding Path=DataContext.TestProgressFirstName, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"/>
        <ProgressBar HorizontalAlignment="Left" Height="3" Margin="450,160,0,0" VerticalAlignment="Top" Width="120"
                     Value="{Binding Path=DataContext.TestProgressMiddleName, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"/>
        <ProgressBar HorizontalAlignment="Left" Height="3" Margin="450,200,0,0" VerticalAlignment="Top" Width="120"
                     Value="{Binding Path=DataContext.TestProgressLastName, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"/>
        <ProgressBar HorizontalAlignment="Left" Height="3" Margin="450,240,0,0" VerticalAlignment="Top" Width="120"
                     Value="{Binding Path=DataContext.TestProgressClass, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"/>
        <ProgressBar HorizontalAlignment="Left" Height="3" Margin="450,280,0,0" VerticalAlignment="Top" Width="120"
                     Value="{Binding Path=DataContext.TestProgressPhoneNo, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"/>
        <ProgressBar HorizontalAlignment="Left" Height="3" Margin="450,320,0,0" VerticalAlignment="Top" Width="120"
                     Value="{Binding Path=DataContext.TestProgressBalanceBF, RelativeSource={RelativeSource AncestorType=views:ImportWizardMainWindow}}"/>
    </Grid>
</UserControl>
