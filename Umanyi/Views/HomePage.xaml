                    <MenuItem Header="Purchase History"/>
                    <MenuItem Header="Items"/>
                    <MenuItem Header="Suppliers"/>
                </MenuItem>
                <MenuItem Header="Library">
                    <MenuItem Header="Issue Book(s)"/>
                    <MenuItem Header="Return Book(s)"/>
                    <MenuItem Header="New Book"/>
                    <MenuItem Header="Modify Book"/>

                    <MenuItem Header="Books List"/>
                    <MenuItem Header="Unreturned Books"/>
                </MenuItem>
                <MenuItem Header="Gallery &amp; Events">
