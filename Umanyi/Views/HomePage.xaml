                    <TextBlock TextWrapping="WrapWithOverflow" Margin="0,20,20,0" Text="{Binding Info.Name, StringFormat=Welcome to {0} Retail Management System,
                FallbackValue=Welcome to Marcia Retail Management System, Source={x:Static Application.Current}}" VerticalAlignment="Top"
