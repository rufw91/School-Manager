                    <MenuItem Header="Backup"/>
                    <MenuItem Header="Exit"/>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="Copy"/>
                    <MenuItem Header="Cut"/>
                    <MenuItem Header="Paste"/>
                    <MenuItem Header="Select All"/>
                    <MenuItem Header="Find"/>
                </MenuItem>
                <MenuItem Header="Students">
                    <MenuItem Header="New Student"/>
                    <MenuItem Header="Modify Student Details"/>
                    <MenuItem Header="Student List"/>
                    <MenuItem Header="Class List"/>
                    <MenuItem Header="Subject Selection (Per Student)"/>
                    <MenuItem Header="Subject Selection (Per Class)"/>
                    <MenuItem Header="Assign New Class"/>
                    <MenuItem Header="Clear Student"/>
                </MenuItem>
                <MenuItem Header="Staff">
                    <MenuItem Header="New Staff"/>
                    <MenuItem Header="Modify Staff Details"/>
                    <MenuItem Header="Staff List"/>
                </MenuItem>
                <MenuItem Header="Fees">
                    <MenuItem Header="New Fees Payment"/>
                    <MenuItem Header="Bill Student"/>
                    <MenuItem Header="View Fees Structure"/>
                    <MenuItem Header="Set Fees Structure"/>
                    <MenuItem Header="Reprint Receipt"/>
                    <MenuItem Header="Remove Payment"/>
                    <MenuItem Header="Remove Bill"/>
                    <MenuItem Header="Fees Statement"/>
                    <MenuItem Header="Balances List"/>
                    <MenuItem Header="Fees Payment History"/>
                    <MenuItem Header="Payments by Voteheads"/>
                </MenuItem>
