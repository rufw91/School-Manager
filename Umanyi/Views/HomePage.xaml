                        <MenuItem Header="Current Expenditure"/>
                    </MenuItem>
                    <MenuItem Header="Statement of Cashflows"/>
                    <MenuItem Header="Balance Sheet"/>
                    <MenuItem Header="Trial Balance"/>
                    <MenuItem Header="Chart of Accounts"/>
                    <Separator/>
                    <MenuItem Header="New Account"/>
                    <MenuItem Header="Remove Account"/>
                </MenuItem>

