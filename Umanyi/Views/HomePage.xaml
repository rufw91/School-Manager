                    <StackPanel Margin="20,110,10,0" VerticalAlignment="Top">
                        <TextBlock VerticalAlignment="Top" Style="{DynamicResource Emphasis1}" TextWrapping="WrapWithOverflow">
                v3.1 is here and has loads of improvements and new features:</TextBlock>
                        <Grid Height="10"/>
                        <TextBlock Margin="10,0,0,0" Text="- Now includes a Sales view and Manager view."/>
                        <Grid Height="10"/>
                        <TextBlock Margin="10,0,0,0" Text="- Introduced Reports"/>
                        <Grid Height="10"/>
                        <TextBlock Margin="10,0,0,0" Text="- Better Security"/>
                        <Grid Height="10"/>
                        <TextBlock Margin="10,0,0,0" Text="- Faster export to MS Excel"/>
                        <Grid Height="10"/>
                        <TextBlock Margin="10,0,0,0" Text="- Automatic Backup"/>
