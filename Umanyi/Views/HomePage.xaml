                    <MenuItem Header="Remove Event"/>
                </MenuItem>

                <MenuItem Header="Payroll">
                    <MenuItem Header="New Payslip"/>
                    <MenuItem Header="Reprint Payslip"/>
                    <MenuItem Header="Payment History"/>
                    <MenuItem Header="Remove Payment"/>
                </MenuItem>

                <MenuItem Header="Accounts">
