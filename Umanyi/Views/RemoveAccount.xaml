<UserControl x:Class="UmanyiSMS.Views.RemoveAccount"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
              d:DesignHeight="600" d:DesignWidth="900"
	Background="White">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="20,20,0,0" Style="{DynamicResource Title}"  Text="Remove Account" VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left" Margin="200,32,0,0" Text="(WARNING: THis action cannot be undone.)" FontWeight="Bold" VerticalAlignment="Top" Foreground="Red"/>

        <TextBlock HorizontalAlignment="Left" Margin="30,100,0,0" Text="Account" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="92,100,0,0" VerticalAlignment="Top" Width="200" Style="{StaticResource TreeviewCombobox}"
                  ItemsSource="{Binding ChartOfAccounts}"
                 Tag="{Binding SelectedAccount, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource,
            ValidatesOnNotifyDataErrors=True}"/>
                
        <Button Content="Delete" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="100" Foreground="Red" 
                Command="{Binding DeleteCommand}"/>

    </Grid>
</UserControl>
