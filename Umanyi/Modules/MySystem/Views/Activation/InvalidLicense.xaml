<UserControl x:Class="UmanyiSMS.Modules.MySystem.Views.InvalidLicense"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:UmanyiSMS.Modules.MySystem.Views"
             mc:Ignorable="d" Background="White"
      d:DesignHeight="500" d:DesignWidth="800">
    <Grid>

        <TextBlock HorizontalAlignment="Left" Margin="20,30,0,0" Text="Invalid License" Style="{DynamicResource Title}" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,75,0,0" Text="It appears your license is invalid :(" Style="{DynamicResource ContentTextBold}" VerticalAlignment="Top"/>

        <TextBlock HorizontalAlignment="Left" Margin="40,140,0,0" Text="To obtain a new license, contact: rufw91@live.com" Style="{DynamicResource Title0}" VerticalAlignment="Top"/>
        <Button Content="Close" HorizontalAlignment="Right" Margin="0,0,20,20" VerticalAlignment="Bottom" Width="130"/>



    </Grid>
</UserControl>
