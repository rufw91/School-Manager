<Application x:Class="UmanyiSMS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views ="clr-namespace:UmanyiSMS.Views"
             Startup="Application_Startup" DispatcherUnhandledException="Application_DispatcherUnhandledException" 
             SessionEnding="Application_SessionEnding" ShutdownMode="OnExplicitShutdown">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UmanyiSMS.Helper;component/Converters/Converters.xaml" />
                <ResourceDictionary Source="/UmanyiSMS.Helper;component/Themes/Generic.xaml" />
                <ResourceDictionary Source="ViewModelsDataTemplates.xaml" />
                <ResourceDictionary Source="ModelsDataTemplates.xaml" />
                <ResourceDictionary Source="GalleryListBoxItem.xaml" />
                <ResourceDictionary Source="DropDown.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Button" BasedOn="{StaticResource BackButton}" x:Key="BackButtonX">
                <Setter Property="Command"
                        Value="{Binding Path=DataContext.BackCommand, RelativeSource={RelativeSource AncestorType=views:MainWindow}}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
