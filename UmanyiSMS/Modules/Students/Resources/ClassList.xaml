<FixedPage xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           Width="793.76" Height="1122.56">
    <Grid Width="793.76" Height="1122.56" DataContext="{Binding Source={x:Static Application.Current}}">
        <TextBlock HorizontalAlignment="Center" Margin="0,30,0,0" Text="CLASS LIST" VerticalAlignment="Top" TextDecorations="Underline" FontFamily="Arial" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="30,83,0,0" Text="CLASS:" VerticalAlignment="Top" FontFamily="Arial" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="543,83,0,0" Text="DATE:" VerticalAlignment="Top" FontFamily="Arial" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="30,130,0,0" Text="Adm. No." VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="300,130,0,0" Text="Name" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial" FontSize="14"/>
        <Border Height="1" Margin="20,0,20,90" VerticalAlignment="Bottom" Background="Black"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,0,0,30"  Text="{Binding Info.Motto}" VerticalAlignment="Bottom" FontFamily="Times New Roman" FontSize="14" FontStyle="Italic"/>
    </Grid>
</FixedPage>